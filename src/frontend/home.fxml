<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.HomeController">
   <top>
      <HBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER" style="-fx-padding:10;">
         <children>
            <Label text="HOME" textFill="WHITE" underline="true">
               <font>
                  <Font name="Comic Sans MS Bold" size="13.0" />
               </font>
            </Label>
            <Label text="CONTACTS" textFill="WHITE" underline="true">
               <font>
                  <Font name="Comic Sans MS Bold" size="13.0" />
               </font>
            </Label>
            <Label text="REVIEWS" textFill="WHITE" underline="true">
               <font>
                  <Font name="Comic Sans MS Bold" size="13.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <StackPane fx:id="centerStack" BorderPane.alignment="CENTER"> <!-- LC: StackPane to keep content centered and the background fills screen-->
         <children>
            <ImageView fx:id="bgImage" opacity="0.7" preserveRatio="true" pickOnBounds="true"> <!-- LC: Background image resizes with window-->
               <image>
                  <Image url="@../resources/images/beachflowers.jpeg" />
               </image>
            </ImageView>
            <VBox alignment="CENTER" spacing="16.0"> <!-- LC: Centered logo = buttons -->
               <ImageView fx:id="logoImageView" fitHeight="208.0" fitWidth="245.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../resources/images/4Seasonslogofinal.png" />
                  </image>
               </ImageView>
               <Button fx:id="loginMainButton" text="Login" onAction="#logIn" style="-fx-background-color: pink;" >
                  <font>
                     <Font name="Comic Sans MS Bold" size="16.0" />
                  </font>
               </Button>
               <Button fx:id="signupMainButton" text="Sign Up" onAction="#signUp" style="-fx-background-color: pink;" >
                  <font>
                     <Font name="Comic Sans MS Bold" size="16.0" />
                  </font>
               </Button>
            </VBox>  
         </children>
      </StackPane>
   </center>
</BorderPane>
